# Copy to /etc/default/led-clock and adjust values.

# Time
LED_TIME_FMT=%H:%M
LED_FONT=1
LED_BLINK_COLON=1
LED_COLON_VGAP=2

# Temperature
LED_DRAW_TEMP=1
LED_TEMP_SHOW_C=1

# Date ticker
LED_TICKER_EVERY=60
LED_TICKER_SPEED=0.07
LED_TICKER_GAP=16
LED_TICKER_WITH_YEAR=1
LED_TICKER_FONT=1

# Brightness
LED_AUTO_DIM=1
LED_BRIGHTNESS_DAY=12
LED_BRIGHTNESS_NIGHT=3
LED_NIGHT_FROM=22:30
LED_NIGHT_TO=07:00

# Effects
LED_SECONDS_BAR=1
LED_SECONDS_BAR_DOTTED=0
LED_SPARKLE_ON_HOUR=1
LED_SPARKLE_DURATION=0.45
LED_SPARKLE_DENSITY=0.15
LED_SPARKLE_FPS=20
LED_MINUTE_SWIPE=1
LED_MINUTE_SWIPE_PX=8
LED_MINUTE_SWIPE_DELAY=0.03

# Hardware
LED_SPI_PORT=0
LED_SPI_DEVICE=0
LED_BUS_HZ=16000000
LED_CASCADED=4
LED_ORIENTATION=-90
LED_ROTATE=0
